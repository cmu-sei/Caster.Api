{
  "PathBase": "",
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgreSQL": "Server=localhost;Port=5432;Database=caster_api;Username=;Password=;"
  },
  "Authorization": {
    "Authority": "http://localhost:5000",
    "AuthorizationUrl": "http://localhost:5000/connect/authorize",
    "TokenUrl": "http://localhost:5000/connect/token",
    "AuthorizationScope": "caster",
    "ClientId": "caster-api",
    "ClientName": "Caster API",
    "ClientSecret": "",
    "RequireHttpsMetaData": false,
    "ValidateAudience": true,
    "ValidAudiences": [] // Defaults to AuthorizationScope if null or empty
  },
  "ClaimsTransformation": {
    "EnableCaching": true,
    "CacheExpirationSeconds": 60,
    "UseRolesFromIdP": true,
    "RolesClaimPath": "realm_access.roles",
    "UseGroupsFromIdP": true,
    "GroupsClaimPath": "groups"
  },
  "Client": {
    "TokenUrl": "http://localhost:5000/connect/token",
    "ClientId": "caster-admin",
    "Scope": "player player-vm",
    "UserName": "",
    "Password": "",
    "MaxRetryDelaySeconds": 120,
    "TokenRefreshSeconds": 600
  },
  "CorsPolicy": {
    "Origins": [
      "http://localhost:4310"
    ],
    "Methods": [],
    "Headers": [],
    "AllowAnyOrigin": false,
    "AllowAnyMethod": true,
    "AllowAnyHeader": true,
    "SupportsCredentials": true
  },
  "Player": {
    "VmApiUrl": "http://localhost:4302",
    "VmConsoleUrl": "http://localhost:4305/vm/{id}/console",
    "MaxParallelism": 8,
    "RemoveLoopSeconds": 300
  },
  "Terraform": {
    "BinaryPath": "",
    "DefaultVersion": "0.12.29",
    "PluginDirectory": "",
    "RootWorkingDirectory": "",
    "OutputSaveInterval": 5000,
    "GitlabApiUrl": "",
    "GitlabToken": "",
    "GitlabGroupId": null,
    "StateRetryCount": 12,
    "StateRetryIntervalSeconds": 5,
    "AzureDestroyFailureThreshhold": 2,
    "MaxParallelism": 25,
    "EnvironmentVariables": {
      "InheritAll": true,
      "Inherit": [
        // "^SEI",
        // "^VSPHERE",
        // "^PROXMOX",
        // "^AWS",
        // "^ARM",
        // "^SSL_CERT_DIR"
      ],
      "Direct": {
        // "SSL_CERT_DIR": "/usr/local/share/ca-certificates/:/etc/ssl/certs/"
      }
    },
    "KubernetesJobs": {
      "Enabled": false,
      "UseHostVolume": false,
      "HostVolumePath": "/mnt/data/terraform",
      "Namespace": "default",
      "Context": "",
      "PersistentVolumeClaimName": "caster-terraform-data-pvc",
      "VolumeMountPath": "/terraform",
      "VolumeMountSubPath": "",
      "RootWorkingDirectory": "/terraform/root",
      "ImageRegistry": "https://registry-1.docker.io/", // docker hub
      "ImageName": "hashicorp/terraform",
      "ImageTags": [
        "1.14",
        "1.13",
        "0.12.29"
      ],
      "QueryImageTags": true,
      "QueryImageTagsRegex": "^([0-9]\\d*\\.\\d+\\.\\d+)$", // all x.x.x semantic versions, no -beta or similar
      "QueryImageTagsMinutes": 720, // twice a day
      "ConfigMaps": [
        // {
        //   "Name": "caster-certs",
        //   "MountPath": "/usr/local/share/ca-certificates/",
        // },
        // {
        //   "Name": "terraformrc",
        //   "MountPath": "/app/.terraformrc",
        //   "SubPath": ".terraformrc"
        // }
      ],
      "AffinityYaml": "" // K8s Node affinity in YAML form.
    }
  },
  "FileVersions": {
    "DaysToSaveAllUntaggedVersions": 7,
    "DaysToSaveDailyUntaggedVersions": 31
  },
  "OpenTelemetry": {
    "AddAlwaysOnTracingSampler": false,
    "AddConsoleExporter": false,
    "AddPrometheusExporter": false,
    "IncludeDefaultActivitySources": true,
    "IncludeDefaultMeters": true
